<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Image View -->
    <ImageView
        android:id="@+id/carousel_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <!-- Dark Overlay to adjust image brightness -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="#66000000" /> <!-- Semi-transparent black overlay -->

    <!-- Caption Text -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="2dp"
        android:padding="16dp">

        <!-- Hindi Caption -->

        <!-- English Caption -->

        <TextView
            android:id="@+id/carousel_caption_hindi"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="55dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="आत्मनं प्रति यज्ञेन, अन्नं दानेन समर्पयेत्|"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/carousel_caption_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/carousel_caption_hindi"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Offer oneself through sacrifice, dedicate food through donation"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />
    </RelativeLayout>

</RelativeLayout>
